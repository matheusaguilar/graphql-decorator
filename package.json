{
  "name": "graphql-decorator",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "gulp",
    "build": "npm run clean && tsc",
    "commit": "git-cz",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "graphql": "^15.1.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "husky": "^4.2.5",
    "typescript": "^3.8.3",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}
